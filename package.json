{
	"name": "studyx",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=web",
		"dev:api": "turbo run dev --filter=api",
		"build": "turbo run build",
		"build:web": "turbo run build --filter=web",
		"build:api": "turbo run build --filter=api",
		"build:full": "bun run build:api && bun run build:with-api",
		"build:with-api": "(cd apps/api && bun run start &) && sleep 2 && bun run build:web; pkill -f 'dist/index.js' || true",
		"start": "(lsof -ti:3000,4000 | xargs kill -9 2>/dev/null || true) && bun run start:api & sleep 1 && bun run start:web",
		"start:web": "cd apps/web && bun run start",
		"start:api": "cd apps/api && bun run start",
		"lint": "turbo run lint",
		"type-check": "turbo run type-check",
		"clean": "turbo run clean && rm -rf node_modules",
		"format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
		"generate-db-types": "bunx supabase gen types typescript --project-id hiumfpqtebwwjepqojsd --schema public > packages/database/src/types.ts",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@tailwindcss/postcss": "^4",
		"@tailwindcss/typography": "^0.5.19",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^20",
		"@types/pg": "^8.15.5",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"baseline-browser-mapping": "^2.9.0",
		"eslint": "^9",
		"eslint-config-next": "16.0.8",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.4.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"tailwindcss": "^4",
		"turbo": "^2.6.1",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5.7.2"
	},
	"overrides": {
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"baseline-browser-mapping": "^2.9.0"
	},
	"packageManager": "bun@1.2.13"
}
